// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "out": false,
        "dist": false
    },
    "search.exclude": {
        "out": true,
        "dist": true
    },
    "typescript.tsc.autoDetect": "off",

    // ✅ Python interpreter from your .venv
    "python.defaultInterpreterPath": "${workspaceFolder}\\.venv\\Scripts\\python.exe",

    // ✅ Used by your Function Analyzer extension — should point to the same interpreter
    "function-analyzer.interpreter": [
        "${workspaceFolder}\\.venv\\Scripts\\python.exe"
    ],

    // ❌ Removed deprecated python.pythonPath

    // ✅ For correct Python IntelliSense and types
    "python.analysis.extraPaths": [
        "${workspaceFolder}\\.venv\\Lib\\site-packages"
    ],
    "python.analysis.autoSearchPaths": true,
    "python.analysis.useLibraryCodeForTypes": true,

    // ✅ Pytest testing config
    "python.testing.pytestArgs": ["src/test/python_tests"],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.cwd": "${workspaceFolder}",

    // ✅ TypeScript formatting settings
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
    }
}
